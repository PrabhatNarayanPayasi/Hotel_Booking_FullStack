<style>
  /* Make the tax info section fixed */
  .tax-info {
    display: block;
    /* Make sure tax info is visible */
    padding: 10px;
    background-color: #f9f9f9;
    border: 1px solid #ccc;
    margin-bottom: 1rem;
    text-align: center;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.5rem;
    padding: 1rem;
    margin-left: 3rem;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 2rem;
    width: 15rem;
  }

  /* Make the filters container scrollable horizontally */
  #filters {
    display: flex;
    /* Flexbox for horizontal layout */
    flex-wrap: nowrap;
    /* Prevent wrapping */
    overflow-x: auto;
    /* Enable horizontal scrolling */
    padding: 0.5rem 0;
    /* Space around the filters */
    gap: 1rem;
    /* Space between the items */
    width: 100%;
    /* Ensure it spans full width */
    /* Space to make room for fixed tax info section */
  }

  .icons {
    display: flex;
    /* Flexbox for horizontal layout */
    flex-wrap: nowrap;
    /* Prevent wrapping */
    overflow-x: auto;
    /* Enable horizontal scrolling */

    width: 100%;
  }

  /* Styling for each filter item */
  .filter {
    text-align: center;
    margin-top: 1.3rem;
    opacity: 0.7;
   
    min-width: 150px;
    /* Set a minimum width for each filter */

    transition: opacity 0.3s;
  }

  /* Hover effect for filters */
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  /* Style for the text in filter items */
  .filter p {
    font-size: 0.8rem;
    margin-top: 0.5rem;
  }

  /* Hidden tax info */
  .tax-info {
    display: none;
  }
</style>
