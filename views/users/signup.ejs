<% layout("/layouts/boilerplate") %>
    <h1 class="col-8 offset-2">Signup On WANDERLUST</h1>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input name="username" id="username" placeholder="Enter title" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>

                </div>
                <div class="mb-3">
                    <label for="email" class="form-lable">email</label>
                    <input name="email" id="email" placeholder="Enter title" class="form-control" required>
                   

                </div>

                <div class="mb-3">
                    <label for="password" class="form-lable">Password</label>
                    <input name="password" type="password" id="password" placeholder="Enter title" class="form-control" required>
                   

                </div>
                <button class="btn btn-success">Sign UP</button>
            </form>
        </div>
    </div>